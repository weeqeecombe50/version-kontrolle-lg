#!/bin/bash

# Version Kontrolle LG

# Eine Funktion, um ein neues Projekt zu initialisieren
function init() {
    PROJECT_NAME="$1"
    if [ -z "$PROJECT_NAME" ]; then
        echo "Fehler: Bitte geben Sie einen Projektnamen an!"
        return 1
    fi
    mkdir "$PROJECT_NAME" || { echo "Fehler: Das Verzeichnis konnte nicht erstellt werden!"; return 1; }
    echo "Neues Projekt '$PROJECT_NAME' wurde erstellt!"
}

# Die Hauptbedienungsfunktion, die die Befehle verarbeitet
if [[ "$1" == "init" ]]; then
    init "$2"
else
    echo "Verwendung: ./version-kontrolle init <Projektname>"
    echo "Bitte den Befehl überprüfen."
fi